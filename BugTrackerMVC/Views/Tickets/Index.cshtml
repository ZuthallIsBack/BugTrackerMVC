@model List<BugTrackerMVC.Models.Ticket>
@using BugTrackerMVC.Models

<h2>Zgłoszenia</h2>

<form method="get" class="mb-3">
    <input name="q" value="@Context.Request.Query["q"]" placeholder="Szukaj po tytule" />
    <select name="status">
        <option value="">-- status --</option>
        @foreach (var s in Enum.GetValues<TicketStatus>())
        {
                <option value="@s" selected="@(Context.Request.Query["status"] == s.ToString())">@s</option>
        }
    </select>
    <button type="submit">Filtruj</button>
    <a asp-action="Create">Dodaj</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th><th>Tytuł</th><th>Status</th><th>Priorytet</th><th>Projekt</th><th>Kategoria</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Title</td>
                <td>@t.Status</td>
                <td>@t.Priority</td>
                <td>@t.Project?.Name</td>
                <td>@t.Category?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.Id">Szczegóły</a> |
                    <a asp-action="Edit" asp-route-id="@t.Id">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>
