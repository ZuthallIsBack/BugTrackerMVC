@model BugTrackerMVC.Models.ViewModels.TicketFormVm
@using BugTrackerMVC.Models

<h2>Edytuj zgłoszenie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div asp-validation-summary="All"></div>

    <label>Tytuł</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>

    <label>Opis</label>
    <textarea asp-for="Description"></textarea>
    <span asp-validation-for="Description"></span>

    <label>Status</label>
    <select asp-for="Status" asp-items="Html.GetEnumSelectList<TicketStatus>()"></select>

    <label>Priorytet</label>
    <select asp-for="Priority" asp-items="Html.GetEnumSelectList<TicketPriority>()"></select>

    <label>Projekt</label>
    <select asp-for="ProjectId" asp-items="Model.Projects"></select>

    <label>Kategoria</label>
    <select asp-for="CategoryId" asp-items="Model.Categories"></select>

    <button type="submit">Zapisz</button>
</form>

@section Scripts {
     <partial name="_ValidationScriptsPartial" />
}
